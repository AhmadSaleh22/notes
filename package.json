{
  "name": "notes-restapi",
  "version": "1.0.0",
  "description": "The aim of this project is to create a Node.js application that acts as a REST API for a note-taking application.",
  "main": "app.ts",
  "scripts": {
    "dev": "tsnd --respawn --transpile-only --files src/app.ts",
    "lint": "ts-standard --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AhmadSaleh22/notes"
  },
  "keywords": [
    "notes",
    "hexagonal"
  ],
  "author": "ahmad saleh",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AhmadSaleh22/notes/issues"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.5"
  },
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@auth/*": [
        "src/auth/*"
      ],
      "@core/*": [
        "src/core/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "homepage": "https://github.com/AhmadSaleh22/notes#readme",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.4",
    "dotenv": "^16.4.7",
    "jest-module-name-mapper": "^0.1.5",
    "ts-node-dev": "^2.0.0",
    "ts-standard": "^12.0.2",
    "typescript": "^5.7.3"
  },
  "_moduleAliases": {
    "@auth": "src/auth",
    "@core": "src/core"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ]
  }
}
